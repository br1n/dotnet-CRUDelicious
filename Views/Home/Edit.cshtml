@model Dish
@{
    ViewData["Title"] = "Edit Dish!" ;
}
<h2>Update your Dish - @Model.Name </h2>
<a href="/"><button type="submit">Go Home</button></a>
<hr>
<form method="post" asp-action="Update" asp-controller="Home" asp-route-dishId="@Model.DishId">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name">
    </div>
    <div class="form-group">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef">Chef:</label>
        <input asp-for="Chef">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description">Description:</label>
        <textarea name="Description" id="" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label for="Tastiness">Tastiness Scale:</label>
        <select name="Tastiness">
            <option value="">-</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories">Calories:</label>
        <input type="text" asp-for="Calories">
    </div>
    <input type="submit" value="Submit Changes">
</form>
